<%= simple_form_for @place do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control"} %>
    <%= f.input :shared_by, input_html: { class: "form-control"} %>
    <h4>Enter either address or coordinates</h4>
    <%= f.input :raw_address, input_html: { class: "form-control"} %>
    <small class="text-muted">You can also enter IP. Your IP is <%= request.ip %></small>
    <div class="form-group row">
      <div class="col-sm-1">
        <%= f.label :latitude %>
      </div>

      <div class="col-sm-3">
        <%= f.text_field :latitude, class: "form-control" %>
      </div>

      <div class="col-sm-1">
        <%= f.label :longitude %>
      </div>

      <div class="col-sm-3">
        <%= f.text_field :longitude, class: "form-control" %>
      </div>
    </div>    
  </div>
    <%= f.submit 'Share!', class: "btn btn-primary", data: { disable_with: "Sharing..." } %>
<% end %>
